.tab-control {
  display: flex;
  padding-bottom: 14rpx;
  background: #fff;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.active {
  color: #ff5777;
}

.tab-item.active text {
  padding: 14rpx 10rpx;
  border-bottom: 6rpx solid #ff5777;
}